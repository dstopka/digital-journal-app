pipeline {
    agent any
    environment {
        INSTALL = "$WORKSPACE/install.sh"
    }
    stages {
        stage("Env") {
            steps {
                sh 'chmod 755 $INSTALL'
            }
        }
        stage('Build') {
            parallel {
                stage('Build API') {
                    steps {
                        sh '$INSTALL api --build'
                    }
                    post {
                        failure {
                            echo('Building API failed. See logs for more details.')
                        }
                    }
                }
                stage('Build UI') {
                    steps {
                            sh '$INSTALL ui --build'
                    }
                    post {
                        failure {
                            echo('Building UI failed. See logs for more details.')
                        }
                    }
                }
            }
        }
        stage('Unit tests') {
            parallel {
                stage('API tests') {
                    steps {
                        sh '$INSTALL api --test'
                    }
                    post {
                        failure {
                            echo('API unit tests failed. See logs for more details.')
                        }
                    }
                }
                stage('UI tests') {
                    steps {
                            sh '$INSTALL ui --test'
                    }
                    post {
                        failure {
                            echo('UI unit tests failed. See logs for more details.')
                        }
                    }
                }
            }      
        }
    }
    post {
        always {
           sh 'docker system prune -f'
        }
    }
}
