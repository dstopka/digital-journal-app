pipeline {
    agent any
    stages {
        stage('Build') {
            parallel {
                stage('Build API') {
                    steps {
                        sh '"$WORKSPACE"/install.sh api --build'
                    }
                    post {
                        failure {
                            echo('Building API failed. See logs for more details.')
                        }
                    }
                }
                stage('Build UI') {
                    steps {
                            sh '"$WORKSPACE"/install.sh ui --build'
                    }
                    post {
                        failure {
                            echo('Building UI failed. See logs for more details.')
                        }
                    }
                }
            }
        }
        stage('Unit tests') {
            parallel {
                stage('API tests') {
                    steps {
                        sh '"$WORKSPACE"/install.sh api --test'
                    }
                    post {
                        failure {
                            echo('API unit tests failed. See logs for more details.')
                        }
                    }
                }
                stage('UI tests') {
                    steps {
                            sh '"$WORKSPACE"./install.sh ui --test'
                    }
                    post {
                        failure {
                            echo('UI unit tests failed. See logs for more details.')
                        }
                    }
                }
            }      
        }
    }
    post {
        always {
           sh 'docker system prune -f'
        }
    }
}
